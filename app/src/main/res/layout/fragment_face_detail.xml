<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pwmobiledeveloper.projects.thenamegame.fragment.FaceDetailFragment">

    <TextView
        android:id="@+id/person_name_text_view"
        android:padding="15dp"
        android:textAlignment="center"
        android:layout_above="@id/person_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/person_image_view"
        android:transitionName="@string/transition_profile_image"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/job_title_text_view"
        android:padding="15dp"
        android:layout_below="@id/person_image_view"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
